<h1 align="center">All Super Blog Users</h1>
  <div align="center">
    <%= will_paginate list_classes: %w(pagination justify-content-center), previous_label: "Previous", next_label: "Next" %>
    <% @users.each do |user| %>
      <ul class="listing">
        <div class="row">
          <div class="card col-md-4 col-md-offset-4 mx-auto">
            <li class="gravatar-img"><%= link_to gravatar_for(user), user_path(user), class: 'rounded-circle' %></li>
            <li class="article-title">
              <%= link_to user.username, user_path(user) %>
            </li>
            <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
            <% if logged_in? and current_user.admin? %>
              <li><%= link_to "Delete this user", user_path(user), method: :delete, data: { confirm: "Are you sure?" }%></li>
            <% end %>
          </div>
        </div>
      </ul>
    <% end %>
    <%= will_paginate list_classes: %w(pagination justify-content-center), previous_label: "Previous", next_label: "Next" %>
  </div>