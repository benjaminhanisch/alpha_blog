<%= render 'shared/errors', obj: @article %>

<div class="container-fluid">
  <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class='form-group row'>
      <div class="col-sm-2 col-form-label">
        <%= f.label :title %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-2 col-form-label">
        <%= f.label :description %>
      </div>
      <div class="col-sm-8">
        <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
      </div>
    </div>


    <div class="form-group row">
      <div class="col-sm-8 offset-sm-2 px-4">
        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
          <% cb.label(class: "checkbox-inline input_checkbox px-2") { cb.check_box(class: "checkbox") + cb.text } %>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-3 offset-sm-2">
        <%= f.submit class: 'btn btn-success' %>
      </div>
    </div>
      <div class="col-sm-3 offset-sm-2 mx-auto">
         <%= link_to "Cancel and return to articles listing", articles_path %>
      </div>
    </div>
  <% end %>
</div>