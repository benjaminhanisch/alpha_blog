<% if obj.errors.any? %>
  <div class="container-fluid">
    <div class="card text-center border-danger mb-4">
      <div class="card card-danger">
        <div class="card-header">Errors</div>
          <h2 class="card-title"><%= pluralize(obj.errors.count, "error") %> prohibited this <%= obj.class.name.downcase %> from being saved:</h2>
          <div class="card-body">
          <div class="card-text">
            <ul>
              <% obj.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>